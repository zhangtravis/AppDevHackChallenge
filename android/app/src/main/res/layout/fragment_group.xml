<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupFragment"
    android:background="@color/blue_3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/find_challenges_text"
        android:text="@string/find_challenges"
        android:fontFamily="@font/lavigne"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/find_challenges_text"
        android:background="@drawable/rounded_corner_white"
        android:text="@string/search"
        android:maxLength="@string/search_max"/>
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"
        app:layout_constraintLeft_toRightOf="@id/search_bar"
        android:background="@color/transparent"
        android:text="@string/search_icon"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/clear_search_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="@id/search_bar"
        app:layout_constraintRight_toLeftOf="@id/search_button"
        android:background="@color/transparent"
        android:text="X"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/radio">
        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp group1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:layout_marginHorizontal="5dp"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp group1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:layout_marginHorizontal="5dp"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp group1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:layout_marginHorizontal="5dp"
            android:button="@null"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/clear"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_challenges"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.73"
        app:layout_constraintTop_toBottomOf="@id/radio"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/emptyAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/all_challenges"
        android:text="@string/emptyAll"
        android:gravity="center"
        android:textSize="20dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>