<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corner"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_title"
        android:background="@color/white"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:text="@string/player"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/lavigne"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintRight_toRightOf="@id/line"
        android:text="@string/points"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/lavigne"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/leaderboard_player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_text"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/player_text"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player1"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player1"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player2"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player2"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_player4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player3"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player3"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_player5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player4"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player4"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_player5"
        android:background="@color/white"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/leaderboard_player_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/leaderboard_points_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintRight_toRightOf="@id/line"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>